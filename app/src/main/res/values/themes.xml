<resources>

    <style name="Theme.Countries" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black_light</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/black_light</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorOnSurface</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/Countries.ToolbarStyle</item>

        <!-- Text appearance -->
        <item name="textAppearanceBodyRegular14">@style/TextAppearance.Countries.Body.Regular14</item>
        <item name="textAppearanceBodySemiBold14">@style/TextAppearance.Countries.Body.SemiBold14</item>
        <item name="textAppearanceBodyItalic14">@style/TextAppearance.Countries.Body.Italic14</item>
        <item name="textAppearanceBodyBold20">@style/TextAppearance.Countries.Body.Bold20</item>
    </style>

    <style name="Theme.Countries.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Countries.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Countries.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Countries.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="elevation">6dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Countries.Body.Bold20</item>
        <item name="background">?attr/colorOnSurface</item>
        <item name="navigationIcon">@null</item>
    </style>

    <style name="Countries.MenuTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/philosopher_bold</item>
        <item name="android:fontFamily">@font/philosopher_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Countries.Body.Bold20" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/philosopher_bold</item>
        <item name="android:fontFamily">@font/philosopher_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Countries.Body.Regular14" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/philosopher_regular</item>
        <item name="android:fontFamily">@font/philosopher_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Countries.Body.SemiBold14" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/philosopher_bold</item>
        <item name="android:fontFamily">@font/philosopher_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Countries.Body.Italic14" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/philosopher_italic</item>
        <item name="android:fontFamily">@font/philosopher_italic</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Countries.Button.Medium" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/philosopher_bold</item>
        <item name="android:fontFamily">@font/philosopher_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Countries.DialogFragment.Style" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">@dimen/margin_small</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>